<div class="center">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(product.image.url), product %>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><%= number_to_currency(product.price) %></p> 
            <p><%= "Sold by #{product.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>