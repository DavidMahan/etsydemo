<div class="center">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(product.image.url), product %>
          <div class="caption">
            <h3><%= product.name %></h3>
            <p><%= number_to_currency(product.price) %></p> 
            <p><%= "Sold by #{product.user.name}" %></p>
            <%= link_to 'Show', product, class: "btn btn-link" %>
            <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link" %>
            <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>

  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image.url(:thumb) %></td>
      <td><%= product.name %></td>
      <td><%= product.description %></td>
      <td><%= number_to_currency(product.price) %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", product, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_product_path(product), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Product', new_product_path, class: "btn btn-link" %>
<% end %>